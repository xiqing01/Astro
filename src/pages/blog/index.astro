---
import { getCollection } from "astro:content";
import DefaultLayout from "../../layouts/Default.astro";

import CutCornerButton from "../../components/CutCornerButton";
import Hexagon from "../../components/Hexagon";
import Card from "../../components/Card";
import { Tag } from "../../components/Tag";

import { getPostColorFromCategory } from "../../utils/postUtils";
import { twMerge } from "tailwind-merge";
import { motion } from "motion/react";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const latestPost = posts[0];
---

<DefaultLayout>
  <!-- Hero Section -->
  <sectiion class="relative overflow-x-clip">
    <div
      class="absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2"
    >
      <Hexagon size={800} className="" reverse duration={30} client:load />
    </div>
    <div
      class="absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2"
    >
      <Hexagon size={1200} className="" duration={50} client:load />
    </div>
    <div class="container mx-auto text-amber-50 py-50">
      <div class="max-w-3xl mx-auto">
        <p class="uppercase font-extrabold text-center text-zinc-500">
          Latest Post
        </p>
        <h1 class="font-heading font-black md:text-6xl lg:text-7xl text-5xl text-center mt-2">
          {latestPost.data.title}
        </h1>
        <p class="text-center text-xl md:text-2xl mt-6 text-zinc-400 max-w-xl mx-auto">
          {latestPost.data.description}
        </p>
        <div class="flex justify-center mt-8">
          <a href={`/blog/${latestPost.slug}`} class="relative">
            <CutCornerButton children="Read More" className="" />
          </a>
        </div>
      </div>
    </div>
  </sectiion>

  <!-- blog Section -->
  <section class="py-32 bg-zinc-900/30 backdrop-blur-sm">
    <div class="container mx-auto text-amber-50">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="hidden md:flex flex-col gap-12 md:gap-8">
          {
            posts.map(
              ({ data: { category, title, description }, slug }, postIndex) => (
                <motion.a
                  client:load
                  initial={{ opacity: 0, y: 20 }}
                  whileInView={{ opacity: 1, y: 0 }}
                  viewport={{ once: true, amount: 0.5 }}
                  transition={{ duration: 0.5, ease: "easeIn" }}
                  href={`/blog/${slug}`}
                  className={twMerge(postIndex % 2 === 0 ? "" : "block md:hidden")}
                >
                  <Card
                    colorClass={getPostColorFromCategory(category)}
                    Buttontext={"Read More"}
                    className=""
                  >
                    <Tag
                      colorClass={getPostColorFromCategory(category)}
                      children={category}
                      className="text-xs"
                    />
                    <h2 class="font-heading font-black text-3xl mt-4">
                      {title}
                    </h2>
                    <p class="text-lg mt-6 text-zinc-400">{description}</p>
                  </Card>
                </motion.a>
              )
            )
          }
        </div>
        <div>
          <div class="flex flex-col gap-12 mt-28 ">
            {
              posts.map(
                (
                  { data: { category, title, description }, slug },
                  postIndex
                ) => (
                  <motion.a
                    client:load
                    initial={{ opacity: 0, y: 20 }}
                    whileInView={{ opacity: 1, y: 0 }}
                    viewport={{ once: true, amount: 0.5 }}
                    transition={{ duration: 0.5, ease: "easeIn" }}
                    href={`/blog/${slug}`}
                    className={twMerge(postIndex % 2 === 0 ? "block md:hidden" : "")}
                  >
                    <Card
                      className=""
                      colorClass={getPostColorFromCategory(category)}
                      Buttontext={"Read More"}
                    >
                      <Tag
                        colorClass={getPostColorFromCategory(category)}
                        children={category}
                        className="text-xs"
                      />
                      <h2 class="font-heading font-black text-3xl mt-4">
                        {title}
                      </h2>
                      <p class="text-lg mt-6 text-zinc-400">{description}</p>
                    </Card>
                  </motion.a>
                )
              )
            }
          </div>
        </div>
      </div>
    </div>
  </section>
</DefaultLayout>
